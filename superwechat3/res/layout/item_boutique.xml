<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_boutique_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivBoutiqueImg"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@+id/ivBoutiqueImg"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBoutiqueTitle"
            android:textColor="@color/list_item_title"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="Aug 20 201"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBoutiqueName"
            android:textColor="@color/list_item_name"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:text="冬秋衣橱大换血"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBoutiqueDescription"
            android:textColor="@color/gray_normal"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="2015/W Trends Report"/>

    </LinearLayout>

</RelativeLayout>
